---
layout: onecol.jade
---
script(src="/assets/uikit/js/components/lightbox.min.js")

mixin icon-link(href, name, icon)
  .uk-width-1-3.icon-link
    a(href=href)
      .uk-panel.uk-panel-box
        h3.uk-text-center
          | #{name}
        p.uk-text-center
          i(class="uk-icon-large uk-icon-" + icon)

h1.uk-margin-bottom The SLAMStruder
.uk-grid.uk-grid-match(data-uk-grid-match="{target:'.uk-panel'}")
  +icon-link('/guides', "Usage Guides", "file-text-o")
  +icon-link('/make', "Make Your Own", "wrench")
  +icon-link('/details', "Technical Info", "info-circle")

section.uk-block.uk-block-muted.uk-margin-large
  .uk-container
    h2.uk-text-bold What is it?
    hr
    p The SLAMStruder is a 3D printing extruder designed for use on six-axis robotic arms. The goal of the SLAMStruder is to enable extrusion of 3D printable plastics in free-air instead of in layers. When paired with a six-axis robotic arm, the SLAMStruder can be used to print pre-programmed, high quality 3D lattices in a layer-free manner.
        h4.uk-text-right
          a(href="guide/intro") Learn more #[i.uk-icon-arrow-right]

mixin feature-image(src, caption)
  a(href=src, data-uk-lightbox="", title="The SLAMStruder in action")
    figure.uk-overlay.uk-overlay-hover.feature-image.uk-margin-large
      img.uk-responsive-width(src=src)
      figcaption.uk-overlay-panel.uk-overlay-background.uk-overlay-bottom.uk-overlay-fade
        != caption

.uk-grid
  .uk-width-large-1-2
    +feature-image("/assets/img/general/mounted.jpg", "The SLAMStruder in action")

  .uk-width-large-1-2
    +feature-image("/assets/img/general/pretty_lights.jpg", "The  electronics")

  .uk-width-large-1-2
    +feature-image("/assets/img/general/hotend.jpg", "The heated nozzle")

  .uk-width-large-1-2
    +feature-image("/assets/img/general/ds.jpg", "A decorative Digital Structures logo")

